<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BeritaFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/frag_berita">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4D61CF"
            app:title="Berita"
            app:titleTextColor="@color/white"
            app:layout_scrollFlags="enterAlways|scroll"
            app:menu="@menu/option_menu_item"
            >

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="60dp">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PELATIH JUVENTUS DIPECAT"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Massimiliano Allegri bukan lagi pelatih Juventus. Allegri resmi dipecat hanya setelah mengantar Juve memenangi Coppa Italia 2023/2024, tengah pekan ini." />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 2-10: Duplicate the structure of Item 1 -->
            <!-- Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEMAIN TERBAIK EPL MUSIM INI"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemain Chelsea Cole Palmer dinobatkan menjadi Young Player of the Season, alias Pemain Muda Terbaik di Premier League 2023/2024.
"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KABAR PEMECATAN XAVI"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kabar Presiden Barcelona, Joan Laporta, ingin memecat Xavi Hernandez dikabarkan bikin skuad Barcelona terbelah. Ada yang ingin Xavi bertahan, ada juga sebaliknya.
 "/>
                </LinearLayout>
            </LinearLayout>

            <!-- Repeat this block for items 4-10 -->
            <!-- Item 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist4" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PSSI AGENDAKAN UJI COBA VS BELANDA"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timnas Belanda diagendakan datang ke Indonesia. Hal itu diungkap oleh Ketua Umum PSSI Erick Thohir. " />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERSIB BANTAI BALI UNITED"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persib Bandung mengalahkan Bali United di semifinal Championship Series Liga 1. Bobotoh langsung menggaungkan kata 'Assalamualaikum Final' di media sosial." />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist6" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BAYERN MUNICH GAGAL TOTAL MUSIM INI"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bayern Munich gagal total di semua kompetisi musim ini. Thomas Mueller cs ingin segera melupakan hasil-hasil buruk itu dan fokus ke musim depan." />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MESSI DKK SULIT MENANG"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inter Miami susah payah saat melawan DC United, dalam lanjutan kompetisi Major League Soccer 2024. Lionel Messi dkk menang 1-0 " />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist8" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLUB TURKI NGEBET PAKAI JASA MOURINHO"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jose Mourinho masih menganggur saat ini, usai dipecat AS Roma. Klub-klub Turki ngebet menggunakan jasa pelatih asal Portugal itu." />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist9" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARTETA TIDAK MAU LIHAT ARSENAL KALAH"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arsenal masih punya asa juara Liga Inggris jika menang atas Everton dan Manchester City kalah dari West Ham United. Mikel Arteta masih percaya timnya bisa melakukannya!" />
                </LinearLayout>
            </LinearLayout>

            <!-- Item 10 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/photo10"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/fotolist10" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/judul10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CITY MAU JUARA? HARUS SEMPURNA"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/desc10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manchester City selangkah lagi juara Liga Inggris musim ini, asal menang atas West Ham United. Pep Guardiola ingatkan, Haaland dkk harus bermain 'sempurna'. " />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#77B0AA"
        >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HOME"
            android:backgroundTint="#77B0AA" />

        <Button
            android:id="@+id/btn_berita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BERITA"
            android:backgroundTint="#77B0AA" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PROFILE"
            android:backgroundTint="#77B0AA" />
    </LinearLayout>
</RelativeLayout>
